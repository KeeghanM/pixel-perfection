---
import type { TFancyText } from './TFancyText'

interface Props extends TFancyText {}
const { text, classes } = Astro.props
---

<span
  style='background: linear-gradient(135deg, var(--accent), var(--secondary)); -webkit-background-clip: text; -webkit-text-fill-color: transparent;'
  class={`fancy-text ${classes}`}
  >{text}</span
>
