---
import { Icon } from 'astro-icon/components'
import FancyText from '../ui/fancy-text/fancy-text.astro'
import Section from '../ui/section/section.astro'

const features = [
  {
    icon: 'lucide:eye',
    title: 'Live Preview',
    description: `Watch your changes come to life instantly with real-time preview. Every
keystroke updates the design, giving you immediate visual feedback.`,
  },
  {
    icon: 'lucide:copy-check',
    title: 'Comparison Algorithm',
    description: `Pixel-perfect overlay comparison with diff highlighting, that accounts
for every pixel. Identify even the smallest discrepancies between your
code and the target design.`,
  },
  {
    icon: 'lucide:layout',
    title: 'Curated Challenges',
    description: `From basic HTML/CSS layouts to complex component styling. Each challenge
tests specific skills and builds your attention to detail progressively.`,
  },
  {
    icon: 'lucide:keyboard',
    title: 'Developer Focused',
    description: `Built by developers, for developers. Keyboard shortcuts, dark mode, and
premium UX that feels like home.`,
  },
  {
    icon: 'lucide:code',
    title: 'Simple Editor',
    description: `Code with confidence in our integrated editor featuring syntax
highlighting and auto-completion inspired by VS Code.`,
  },
  {
    icon: 'lucide:award',
    title: 'Global Leaderboard',
    description: `<span style='opacity: 0.7; font-style: italic;'>Coming Soon:</span>
 Compete with developers worldwide, track your ranking, and showcase
your precision coding skills.`,
  },
]
---

<Section
  id='features'
  subtitle='Professional tools and features designed for serious developers'
  theme='light'
>
  <span slot='title'>
    Features <FancyText text='Designed for Developers' />
  </span>
  <div class='features-grid'>
    {
      features.map((feature) => (
        <div class='feature-card fade-in'>
          <div class='feature-icon'>
            <Icon
              width='40px'
              height='40px'
              name={feature.icon}
            />
          </div>
          <h3 class='feature-title'>{feature.title}</h3>
          <p
            class='feature-description'
            set:html={feature.description}
          />
        </div>
      ))
    }
  </div>
</Section>

<style>
  .features-section {
    padding: 8rem 0;
    background: var(--bg-secondary);
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 4rem;
    padding: 0 1rem;
  }

  .feature-card {
    background: var(--glass-bg);
    border: 1px solid var(--glass-border);
    border-radius: 12px;
    padding: 2rem;
    backdrop-filter: blur(20px);
    transition: all 0.3s ease;
  }

  .feature-card:hover {
    transform: translateY(-4px);
    border-color: var(--primary);
    box-shadow: 0 20px 40px rgba(0, 212, 255, 0.1);
  }

  .feature-icon {
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1.5rem;
  }

  .feature-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .feature-description {
    color: var(--text-secondary);
    line-height: 1.6;
  }
</style>
