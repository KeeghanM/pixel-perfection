---
import { Icon } from 'astro-icon/components'
import FancyText from '../ui/fancy-text/fancy-text.astro'
---

<footer class='footer'>
  <div class='footer-content'>
    <p>Created by <FancyText text='Keeghan McGarry' /></p>
    <div class='footer-links'>
      <a
        aria-label='Portfolio'
        href='https://keeghan.io'
        target='_blank'
        rel='noopener noreferrer'
      >
        <Icon
          name='lucide:briefcase-business'
          width='32'
          height='32'
        />
      </a>
      <a
        aria-label='GitHub'
        href='https://github.com/KeeghanM'
        target='_blank'
        rel='noopener noreferrer'
      >
        <Icon
          name='simple-icons:github'
          width='32'
          height='32'
        />
      </a>
      <a
        aria-label='LinkedIn'
        href='https://www.linkedin.com/in/keeghan-mcgarry/'
        target='_blank'
        rel='noopener noreferrer'
      >
        <Icon
          name='simple-icons:linkedin'
          width='32'
          height='32'
        />
      </a>
    </div>
  </div>
</footer>

<style lang='scss'>
  .footer {
    background: var(--bg-primary);
    border-top: 1px solid var(--border-primary);
    padding: 3rem 0 2rem;

    &-content {
      max-width: 1200px;
      margin: 0 auto;
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 1rem;

      p {
        color: var(--text-secondary);
        margin: 0;
      }
    }

    &-links {
      display: flex;
      gap: 1.5rem;

      a {
        color: var(--text-secondary);
        transition: color 0.3s ease;

        &:hover {
          color: var(--primary);
        }
      }
    }
  }
</style>
